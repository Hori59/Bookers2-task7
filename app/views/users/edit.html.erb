<h2>User info</h2>

<%= form_for(@user) do |f| %>

<!-- エラーメッセージ表示-->
<% if @user.errors.any? %>
	<div id="error_explanation">
		<h3><%= @user.errors.count %>error occurrence</h3><!--エラーメッセ-->
		<ul>
			<% @user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>
<!-- エラーメッセージ表示-->

<div class="field">
	<%= f.label :name %><br />
	<%= f.text_field :name, class: "name" %>
</div>

<div class="field">
	<%= f.label :image %><br />
	<%= f.attachment_field :profile_image, class: "user_image" %>
</div>

<div class="field">
	<%= f.label :introduction %><br />
	<%= f.text_area :introduction, class: "introduction" %>
</div>

<!-- 住所入力欄 -->
<div class="field">
  <%= f.label :postal_code %><br />
  <%= f.text_field :postal_code, autofocus: true, placeholder: '郵便番号', class: "postal_code", id: "address_zipcode" %>
</div>

<div class="field">
  <%= f.label :prefecture_code %><br />
  <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, class: "address" %>
</div>

<div class="field">
  <%= f.label :city %><br />
  <%= f.text_field :address_city, autofocus: true, placeholder: '市区町村', class: "address", id:"address_city" %>
</div>

<div class="field">
  <%= f.label :street %><br />
  <%= f.text_field :address_street, autofocus: true, placeholder: '丁目番地', class: "address", id: "address_street" %>
</div>
<!-- 住所入力欄 -->

<div class="actions">
	<%= f.submit %>
</div>

<% end %>